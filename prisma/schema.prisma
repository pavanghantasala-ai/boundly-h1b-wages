// Prisma schema for Boundly
// Provider: PostgreSQL (Supabase/Neon)

generator client {
  provider = "prisma-client-js"
  // Limit binaries to reduce serverless function size on Netlify (Amazon Linux)
  // "native" for local dev, "debian-openssl-3.0.x" for Netlify build/runtime
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String?

  accounts      Account[]
  sessions      Session[]
  queryLogs     QueryLog[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model WageIndex {
  id        String  @id @default(uuid())
  year      String
  soc       String
  title     String
  areaCode  String
  areaName  String
  unit      String   // 'hourly'
  level1    Decimal  @db.Decimal(12,4)
  level2    Decimal  @db.Decimal(12,4)
  level3    Decimal  @db.Decimal(12,4)
  level4    Decimal  @db.Decimal(12,4)

  @@index([soc])
  @@index([areaCode])
  @@index([title])
}

model QueryLog {
  id            String   @id @default(uuid())
  userId        String?
  createdAt     DateTime @default(now())
  socInput      String
  areaCode      String?
  offeredWage   Decimal  @db.Decimal(12,2)
  offeredUnit   String   // hourly/annual
  computedLevel Int
  lotteryWeight Int
  year          String

  user User? @relation(fields: [userId], references: [id])
}

/// New tables aligned to the H-1B design document

model Registrant {
  id                   String   @id @default(uuid())
  firstName            String?
  lastName             String?
  email                String?
  employerName         String?
  jobTitle             String
  socCode              String?
  offeredSalaryAnnual  Decimal  @db.Decimal(12,2)
  workCity             String?
  workState            String?
  mastersExemption     Boolean  @default(false)
  submittedDate        DateTime @default(now())

  calculationRuns      CalculationRun[]

  @@index([socCode])
  @@index([jobTitle])
}

// Normalized wage levels table (annualized wage figures)
model WageLevel {
  id        String  @id @default(uuid())
  socCode   String
  areaCode  String
  level1    Decimal @db.Decimal(12,2)
  level2    Decimal @db.Decimal(12,2)
  level3    Decimal @db.Decimal(12,2)
  level4    Decimal @db.Decimal(12,2)
  unit      String  // stored unit reference, but values are annualized
  sourceDate DateTime?

  @@index([socCode])
  @@index([areaCode])
  @@unique([socCode, areaCode])
}

model SocMapping {
  id                 String   @id @default(uuid())
  normalizedJobTitle String
  socCode            String
  confidenceScore    Float    @default(0)
  createdAt          DateTime @default(now())

  @@index([normalizedJobTitle])
}

model CalculationRun {
  id            String   @id @default(uuid())
  registrantId  String
  modelVersion  String
  inputsJson    Json
  outputsJson   Json
  createdAt     DateTime @default(now())

  registrant Registrant @relation(fields: [registrantId], references: [id], onDelete: Cascade)

  @@index([registrantId])
}

model AppSetting {
  id                String   @id @default(uuid())
  currentCapTotal   Int      @default(65000)
  mastersExemption  Int      @default(20000)
  selectionPolicy   String   @default("random") // random | weighted_by_salary | dhs_proposed
  weightedBuckets   Json?    // e.g., { "1": 1, "2": 2, "3": 4, "4": 10 }
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}
